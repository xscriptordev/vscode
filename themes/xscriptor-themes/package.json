{
  "name": "xscriptor-themes",
  "displayName": "Xscriptor Themes",
  "description": "Collection of themes for Visual Studio Code by Xscriptor.",
  "version": "1.0.8",
  "publisher": "xscriptor",
  "license": "MIT",
  "engines": { "vscode": "^1.85.0" },
  "extensionKind": ["ui"],
  "categories": ["Themes"],
  "keywords": ["theme", "dark", "light", "xscriptor", "colors", "icons", "icon-theme"],
  "icon": "image/icon.png",
  "galleryBanner": { "color": "#0D1117", "theme": "dark" },

  "repository": {
    "type": "git",
    "url": "https://github.com/xscriptordev/vscode",
    "directory": "themes/xscriptor-themes"
  },
  "bugs": { "url": "https://github.com/xscriptordev/vscode/issues" },
  "homepage": "https://github.com/xscriptordev/vscode/tree/main/themes/xscriptor-themes",

  "contributes": {
    "themes": [
      { "label": "X",            "uiTheme": "vs-dark",  "path": "./themes/x.json" },
      { "label": "Madrid", "uiTheme": "vs", "path": "./themes/madrid.json" },
      { "label": "Praha",        "uiTheme": "vs-dark",  "path": "./themes/praha.json" },
      { "label": "Berlin",          "uiTheme": "vs-dark",  "path": "./themes/berlin.json" },
      { "label": "London", "uiTheme": "vs", "path": "./themes/london.json" },
      { "label": "Oslo",               "uiTheme": "vs-dark",  "path": "./themes/oslo.json" },
      { "label": "Helsinki",      "uiTheme": "vs", "path": "./themes/helsinki.json" },
      { "label": "Tokio",       "uiTheme": "vs-dark",  "path": "./themes/tokio.json" },
      { "label": "Lahabana",       "uiTheme": "vs-dark",  "path": "./themes/lahabana.json" },
      { "label": "Paris",       "uiTheme": "vs-dark",  "path": "./themes/paris.json" },
      { "label": "Bogot√°",       "uiTheme": "vs-dark",  "path": "./themes/bogota.json" }
    ],
    "iconThemes": [
      {
        "id": "madrid-icons",
        "label": "Madrid",
        "path": "./icons/madrid.json"
      },
      {
        "id": "oslo-icons",
        "label": "Oslo",
        "path": "./icons/oslo.json"
      },
      {
        "id": "x-icons",
        "label": "X",
        "path": "./icons/x.json"
      },
      {
        "id": "xoslo-icons",
        "label": "XOslo",
        "path": "./icons/xoslo.json"
      }
    ],
    "productIconThemes": [
      {
        "id": "xscriptor-product-icons",
        "label": "Xscriptor Product Icons",
        "path": "./icons/xscriptor-product-icons.json"
      }
    ]
  },

  "files": [
    "themes/*.json",
    "icons/**/*.svg",
    "icons/*.json",
    "icons/fonts/*.woff",
    "image/icon.png",
    "README.md",
    "LICENSE"
  ]
}
